<%- include('./layouts/head.ejs') %>
<html>
  <body class="is-preload">
    <%- include('./layouts/header.ejs') %>

    <!-- Wrapper -->
    <div id="wrapper">
      <section id="three" class="wrapper style1 fade-up">
        <div class="inner">
          <h2>Buscar Publicaciones</h2>
          <p>
            En este apartado podrá realizar la busqueda de las perdidas que han
            sido públicadas.
          </p>
          <div class="split style1">
            <section>
              <form method="POST" action="/search_posts">
                <div class="col-12">
                  <select name="filterBy" id="demo-category">
                    <% if(filter) {%>
                      <% for(let i in filter) {%>
                        <option value=<%= filter[i].clave%> ><%= filter[i].valor%></option>
                        
                        <% } %>
                    <% } %>

                  </select>
                </div>
                <div class="col-6 col-12-medium">
                  <ul class="actions stacked">
                    <li><a class="button submit primary fit">Buscar</a></li>
                  </ul>
                </div>
              </form>
              <section>
                <h3>Publicaciones</h3>
                <% if (posts.length > 0) { %> 

                Si hay 
                <% }else { %> 
                  No hay, vuelva mas tarde 
                  <% } %>
              </section>
            </section>
          </div>
        </div>
      </section>
    </div>

    <%- include('./layouts/footer.ejs') %> <%- include('./layouts/scripts.ejs')
    %>
  </body>
</html>
